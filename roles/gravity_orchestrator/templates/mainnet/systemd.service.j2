[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ service_identifier }}
WorkingDirectory={{ gravity_orchestrator_config_dir }}
EnvironmentFile={{ gravity_orchestrator_environment_secrets_file_path }}
ExecStart={{ gravity_orchestrator_bin_dir }}/{{ service_identifier }} --home {{ gravity_orchestrator_home_dir }} \
    orchestrator --fees 0ugraviton \
    --gravity-contract-address 0xa4108aA1Ec4967F8b52220a4f7e94A8201F2D906 \
    --ethereum-rpc {{ vault.mainnet.gravity.ethereum_rpc }} \
    --cosmos-grpc {{ gravity.node_grpc_address }} \
    --cosmos-phrase "${COSMOS_PHRASE}" \
    --ethereum-key $ETHEREUM_PVT_KEY
Restart=always
RestartSec=4
LimitNOFILE=65536
MemoryMax=64G
StandardOutput=append:{{ gravity_orchestrator_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
