[Unit]
Description={{ project }} Orchestrator Metrics

[Service]
Type=oneshot
User={{ service_identifier }}
Group={{ service_identifier }}
WorkingDirectory={{ orchestrator_metrics_home_dir }}
ExecStart={{ orchestrator_metrics_script_file_path }} 2>/dev/null
LimitNOFILE=65536
MemoryMax=64G
StandardOutput=append:{{ orchestrator_metrics_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
