[Unit]
Description=Vald Metrics

[Service]
Type=oneshot
User={{ service_identifier }}
Group={{ service_identifier }}
WorkingDirectory={{ vald_metrics_home_dir }}
ExecStart=/bin/bash -c '{{ vald_metrics_script_file_path }} 2>/dev/null'
LimitNOFILE=65536
MemoryMax=64G
StandardOutput=append:{{ vald_metrics_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
